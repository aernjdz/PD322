<Window x:Class="Classwork_03_04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Classwork_03_04"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Click="ShowRandomNumber">Generate</Button>
            <TextBox Width="100" Name="number"/>
        </ToolBar>
        <ProgressBar DockPanel.Dock="Bottom" Height="20" IsIndeterminate="True"/>
        <ListBox x:Name="List"/>

    </DockPanel>
</Window>
