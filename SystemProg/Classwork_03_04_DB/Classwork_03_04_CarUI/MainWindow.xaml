<Window x:Class="Classwork_03_04_CarUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Classwork_03_04_CarUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Click="Button_Click" Margin="5">Load Cars</Button>
            <Button Click="Button_Click_1" Margin="5"> Load Filter Cars</Button>
            <Button Click="Button_Click_2"> Show Cars Count </Button>
            <Label Content="Count to create:"/>
            <TextBox Width="100" Name="number"/>
            <Button Click="Button_Click_3" Margin="5" >Create random cars</Button>
        </ToolBar>
        <DataGrid x:Name="grid"></DataGrid>
    </DockPanel>
</Window>
