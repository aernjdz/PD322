<Window x:Class="HomeWork_03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_03"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Button Click="Fill" Margin="4" MinWidth="100">Fill</Button>
            <Button Click="Update" Margin="4"
                    MinWidth="100">Update</Button>
            <ComboBox x:Name="table" Margin="4" MinWidth="50" Width="200"/>
        </DockPanel>
        <DataGrid Grid.Row="1" x:Name="datagrd"/>
    </Grid>
</Window>
